{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
        ],
        "baseUrl": ".",
        "paths": {
            "@s1/*": ["./*"],
        },
    },
    "include": [
        "./**/*.ts",
        "./**/*.vue",
    ],
    "exclude": [
      "node_modules",
    ],
}
